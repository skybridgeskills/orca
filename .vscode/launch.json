{
	"configurations": [
		{
			"name": "Debug via pnpm",
			"cwd": "${workspaceFolder}",
			"request": "launch",
			"runtimeArgs": ["run-script", "debug-dev"],
			"runtimeExecutable": "pnpm",
			"runtimeVersion": "18",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"sourceMaps": true,
			// "trace": true,
			"outFiles": [
				"${workspaceFolder}/**/*",
				"${workspaceFolder}/.svelte-kit/output/**/*.js",
				"!**/node_modules/**"
			],
			"sourceMapPathOverrides": {
				"/src/*": "${workspaceFolder}/src/*"
			}
		},
		{
			"name": "Launch via pnpm",
			"cwd": "${workspaceFolder}",
			"request": "launch",
			"runtimeArgs": ["run-script", "dev"],
			"runtimeExecutable": "pnpm",
			"runtimeVersion": "18",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"sourceMaps": true,
			// "trace": true,
			"outFiles": [
				"${workspaceFolder}/**/*",
				"${workspaceFolder}/.svelte-kit/**/*.js",
				"!**/node_modules/**"
			],
			"sourceMapPathOverrides": {
				"/src/*": "${workspaceFolder}/src/*"
			}
		}
	]
}
